grammar;

// Top-level rule
pub Prefix: (String, String) = {
    "@prefix" <ns:Namespace>":" <uri:Uri> "." => (ns.to_string(), uri.to_string())
};

// Captures the namespace (like "myns:")
Namespace: &'input str = {
    <n:Ident> => n
};

// Captures the URI enclosed in angle brackets (like "<http://example.com/myns#>")
Uri: &'input str = {
    "<" <u:UriContent> ">" => u
};

// Definition of an identifier. To resolve ambiguity, we exclude '<' and '>' characters.
Ident: &'input str = r"[a-zA-Z_][a-zA-Z0-9_]*";

// Definition of URI content
UriContent: &'input str = r"https?://[^>]+";
